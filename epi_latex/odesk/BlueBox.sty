\newcommand*\BuildChpNum[2]{%
\begin{tabular}[t]{@{}c@{}}%
\makebox[0pt][c]{#1\strut} \\[.5ex]%
\colorbox{ChapBlue}{%
%\rule[-10em]{0pt}{0pt}%
\rule[-\blueboxheight em]{0pt}{0pt}%
\rule{1ex}{0pt}\color{black}#2\strut%
\rule{1ex}{0pt}}%
\end{tabular}%
}%
